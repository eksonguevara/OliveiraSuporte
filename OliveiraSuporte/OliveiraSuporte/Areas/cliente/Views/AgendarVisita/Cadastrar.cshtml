@model OliveiraSuporte.Areas.painel.Models.Agenda
@{
    ViewBag.Title = "Cadastrar Agenda";
    Layout = "~/Areas/cliente/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div id="cadastrarnoticias">
        <h2>
            Agendar Visita</h2>
        <div class="editor-label">
            <p>@Html.LabelFor(model => model.DateDaVisita)</p>
        </div>
        <div class="editor-field">
            <p>@Html.EditorFor(model => model.DateDaVisita)</p>
            <p>@Html.ValidationMessageFor(model => model.DateDaVisita)</p>
        </div>
        <div class="editor-label">
            <p>@Html.LabelFor(model => model.Descricao)</p>
        </div>
        <div class="editor-field">
            <p>@Html.TextAreaFor(model => model.Descricao)</p>
            <p>@Html.ValidationMessageFor(model => model.Descricao)</p>
        </div>
        <p>
            <input type="submit" value="Cadastrar" />
        </p>
        @Html.ActionLink("Voltar", "ListaDeVisitas")
    </div>
}