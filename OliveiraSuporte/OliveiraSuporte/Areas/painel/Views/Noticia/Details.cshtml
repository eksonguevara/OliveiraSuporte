@model OliveiraSuporte.Areas.painel.Models.Noticia
@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Areas/painel/Views/Shared/_Layout.cshtml";
}
<h2>
    Detalhes</h2>
<fieldset>
    <legend>Noticia</legend>
    <div class="display-label">
        Titulo</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Titulo)
    </div>
    <div class="display-label">
        Conteudo</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Conteudo)
    </div>
    <div class="display-label">
        Fonte</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Fonte.Nome) / @Html.DisplayFor(model => model.Fonte.Contato)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.NoticiaId }) |
    @Html.ActionLink("Voltar", "Index")
</p>