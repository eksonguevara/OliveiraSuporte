@model OliveiraSuporte.Areas.painel.Models.Fonte
@{
    ViewBag.Title = "Cadastrar Fonte";
    Layout = "~/Areas/painel/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()   
    
    <div id="cadastrarfontes">
    <h2>Cadastrar Fontes</h2>    
    <div>
        <p>@Html.LabelFor(model => model.Nome)</p>
    </div>
    <div>
        <p>@Html.EditorFor(model => model.Nome)</p>
        <p>@Html.ValidationMessageFor(model => model.Nome)</p>
    </div>
    <div>
        <p>@Html.LabelFor(model => model.Fontes)</p>
    </div>
    <div>
        <p>@Html.EditorFor(model => model.Fontes)</p>
        <p>@Html.ValidationMessageFor(model => model.Fontes)</p>
    </div>
    <p>
        <input type="submit" value="Cadastrar" />
    </p>
    <a href="@Url.Action("Index", "Fonte")" class="voltar">Voltar</a>
    </div>
}
