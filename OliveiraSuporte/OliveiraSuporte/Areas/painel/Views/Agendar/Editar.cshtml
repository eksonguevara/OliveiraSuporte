@model OliveiraSuporte.Areas.painel.Models.Agenda
@{
    ViewBag.Title = "Editar";
    Layout = "~/Areas/painel/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
        <div id="editarfontes">
        <h2>
    Editar Fontes</h2>
        @Html.HiddenFor(model => model.AgendaId)
        <div>
            <p>@Html.LabelFor(model => model.DateDaVisita)</p>
        </div>
        <div>
            <p>@Html.EditorFor(model => model.DateDaVisita)</p>
            <p>@Html.ValidationMessageFor(model => model.DateDaVisita)</p>
        </div>
        <div>
            <p>@Html.LabelFor(model => model.Descricao)</p>
        </div>
        <div>
            <p>@Html.EditorFor(model => model.Descricao)</p>
            <p>@Html.ValidationMessageFor(model => model.Descricao)</p>
        </div>
        <p>
            <input type="submit" value="Alterar" />
        </p>
        </div>
}
<a href="@Url.Action("Index", "Agendar")" class="voltar">Voltar</a>