<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jqFancyTransitions.1.8.min.js")" type="text/javascript"></script>
</head>
<body>
    <section id="geral">
    <header>
        <section id="fundoTopo">
            <h1>
                Oliveira Suporte</h1>
        </section>
        <section id="logo">
        Oliveira Suporte
        </section>
       <nav id="menuTopo">
            <ul>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Serviços", "Index", "Servicos")</li>
                <li>@Html.ActionLink("Cadastro", "Index", "Cadastro")</li>
                <li><a href="@Url.Action("Index", "Login", new { Area = "cliente" })">Agende Sua Visita</a></li>
                <li>@Html.ActionLink("Quem Somos", "Index", "QuemSomos")</li>
                <li>@Html.ActionLink("Contato", "Index", "Contato")</li>
            </ul>
    </nav>
    </header>
    @RenderBody()
    <footer>
    <section id="rodape">
    <nav id="menuRodape">
            <ul>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Serviços", "Index", "Servicos")</li>
                <li>@Html.ActionLink("Cadastro", "Index", "Cadastro")</li>
                <li><a href="@Url.Action("Index", "Login", new { Area = "cliente" })">Agende Sua Visita</a></li>
                <li>@Html.ActionLink("Quem Somos", "Index", "QuemSomos")</li>
                <li>@Html.ActionLink("Contato", "Index", "Contato")</li>
            </ul>
    </nav>
    <section id="fundoRodape">
    <p>
             Copyright© www.oliveirasuporte.com.br</p>
    </section>
    <section id="logoWebsolutions">
        <img src="../../Content/themes/base/images/logowebsolutions.jpg" />
    </section>
    <section id="logoRodape">
        <img src="../../Content/themes/base/images/logorodape.jpg" />
    </section>
    </section>
    </footer>
</section>
</body>
</html>
